{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "providers": ["nodejs"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-20_x"],
          "aptPkgs": []
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicy": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60
  }
}